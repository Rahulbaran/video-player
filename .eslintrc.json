{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": 2,
    "func-names": 0,
    "callback-return": 0,
    "prefer-arrow-callback": 0,
    "prefer-spread": 0,
    "prefer-destructuring": 0,
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "eqeqeq": 2,
    "prefer-const": 2,
    "no-var": 2,
    "prefer-template": 2,
    "spaced-comment": 2,
    "require-await": 2,
    "no-console": 2,
    "no-alert": 2,
    "comma-dangle": 2,
    "object-shorthand": 2,
    "no-useless-return": 2,
    "no-implicit-coercion": 2,
    "no-empty-function": 2
  },
  "ignorePatterns": ["dist", "*.config.js", "node_modules"]
}
